---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://cmrithyderabad.edu.in/",
    description: "CMR Institute Of Technology",
    icon: "mdi:university",
  },
  {
    url: "https://www.instagram.com/cmritmun/",
    description: "CMRIT MUN in Instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://www.facebook.com/cmritmun/",
    description: "CMRIT MUN in Facebook",
    icon: "fa-brands:facebook",
  },
  {
    url: "https://www.linkedin.com/company/cmrit-mun/",
    description: "Astro on Twitter",
    icon: "fa-brands:linkedin",
  },
];
---

<footer class="relative flex flex-col h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            target="_blank"
            href={link.url}
          >
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
  <div class="text-center mt-2">
    <span class="text-xs font-bold">
      Â© Copyright CMRIT. All Rights Reserved
    </span>
  </div>
  <div class="text-center mt-2">
    <span class="text-xs text-yellow-500 font-bold">
      Designed by <a href="https://github.com/tanmaypradhan4112/CMRIT-MUN-website">Board of IT</a>
    </span>          
  </div>
</footer>

