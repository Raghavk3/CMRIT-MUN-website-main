---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
---

<!-- Changing of content -->
<ContentSection title="Where Ideas become Resolution" id="intro">
  <Icon slot="eyebrow" name="logomark" class="h-32" />
  <Fragment slot="lead">
  Join us in shaping the future, one resolution at a time. 
  </Fragment>
  <div>
    <!-- Register button -->
    <a
      href="{}"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon pack="mdi" name="telescope" class="h-8" />
      <span>Register</span>
    </a>
  </div>
</ContentSection>
