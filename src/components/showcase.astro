<ContentSection title="Secretariat" id="secretariat">
  <Fragment slot="lead">
    Meet our <span class="text-primary">Team</span>
  </Fragment>
  <div style="margin-top:-80px;">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
      <div
        class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2  lg:grid-cols-3 xl:grid-cols-5 xl:gap-x-8"
      >
        {
          features.map(({ title, subtitle,description}) => (
            <div>
              <div class="aspect-h-1 aspect-w-1 xl:aspect-h-8 xl:aspect-w-7 w-full overflow-hidden rounded-lg bg-gray-200">
                <img
                  src={description}
                  class="h-full w-full object-cover object-center group-hover:opacity-75"
                />
              </div>
              <h3 class="mt-2 font-bold text-white text-lg">{title}</h3>
              <p class="text-gray font-medium text-sm">{subtitle}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</ContentSection>
